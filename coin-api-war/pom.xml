<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.surfnet.coin</groupId>
    <artifactId>coin-api-parent</artifactId>
    <version>1.0.0-SNAPSHOT</version>
  </parent>
  <groupId>org.surfnet.coin</groupId>
  <artifactId>coin-api-war</artifactId>
  <packaging>war</packaging>
  <name>coin-api-war</name>
  <properties>
    <jetty.version>6.1.26</jetty.version>
    <servlet.version>2.4</servlet.version>
    <spring.version>3.0.3.RELEASE</spring.version>
    <hibernate.version>3.3.2.GA</hibernate.version>
    <hibernate-annotations.version>3.4.0.GA</hibernate-annotations.version>
    <hibernate-validator.version>4.0.2.GA</hibernate-validator.version>
    <mysql.version>5.1.10</mysql.version>
    <httpclient.version>4.1</httpclient.version>
    <shindig.version>2.16.0-COIN</shindig.version>
    <commons-io.version>1.4</commons-io.version>
    <coin-test.version>1.2</coin-test.version>
    <coin-shared.version>1.16.2</coin-shared.version>
    <coin-opensocial.version>1.16.0</coin-opensocial.version>
    <rome.version>1.0</rome.version>
  </properties>
  <profiles>
  	<profile>
      <activation>
        <property>
          <name>jmeter</name>
          <value>true</value>
        </property>
      </activation>
      <id>jmeter</id>
      <build>
        <plugins>
          <plugin>
          	<groupId>org.apache.maven.plugins</groupId>
          	<artifactId>maven-antrun-plugin</artifactId>
          	<version>1.6</version>
              <dependencies>
                <dependency>
                  <groupId>org.programmerplanet</groupId>
                  <artifactId>JMeterTask</artifactId>
                  <version>1.0.9</version>
                  <scope>runtime</scope>
                </dependency>	
              </dependencies>
            <executions>
              <execution>
                <id>jmeter</id>
                <phase>install</phase>
                <configuration>
                  <tasks>
                    <taskdef name="jmeter" classname="org.programmerplanet.ant.taskdefs.jmeter.JMeterTask" />
                    <jmeter jmeterhome="/opt/jakarta-jmeter-2.4" testplan="${basedir}/src/test/resources/jmeter/functional-test.jmx" resultlog="/tmp/jmeter/results-functional-test.jtl">
                      <property name="request.threads" value="1" />
                      <property name="request.loop" value="1" />
                    </jmeter>
                  </tasks>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
  	</profile>
  </profiles>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <version>2.1.2</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <phase>verify</phase>
            <goals>
              <goal>jar-no-fork</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.mortbay.jetty</groupId>
        <artifactId>maven-jetty-plugin</artifactId>
        <version>${jetty.version}</version>
        <configuration>
          <webAppConfig>
            <contextPath>/coin</contextPath>
            <extraClasspath>${basedir}/src/test/resources/</extraClasspath>
            <defaultsDescriptor>${basedir}/src/main/resources/jettywebdefault.xml</defaultsDescriptor>
          </webAppConfig>
          <connectors>
            <connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
              <port>8090</port>
              <host>0.0.0.0</host>
            </connector>
          </connectors>
          <!-- systemProperties> <systemProperty> <name>log4j.configuration</name> 
            <value>file:src/test/resources/log4j.xml</value> </systemProperty> </systemProperties -->
          <scanIntervalSeconds>3</scanIntervalSeconds>
          <useTestClasspath>true</useTestClasspath>
          <!-- jettyEnvXml>${basedir}/src/test/resources/jetty-env.xml</jettyEnvXml -->
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-eclipse-plugin</artifactId>
        <version>2.8</version>
        <configuration>
          <ajdtVersion>none</ajdtVersion>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>replace-version</id>
            <phase>test</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <property name="coin-portal-version" value="${project.version}" />
                <ant target="build" inheritRefs="true" />
              </tasks>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
     <dependency>
